<!--
Launch driver components of Ridgeback's supported accessories.

Be careful that the defaults in this file are kept aligned with those
in the URDF. See ridgeback_description/urdf/accessories.urdf.xacro.
-->
<launch>
  <!-- Primary LMS1xx-series LIDAR, base is front-facing but support for addtional rear. -->
  <group if="$(optenv RIDGEBACK_FRONT_LASER 0)">
    <node pkg="lms1xx" name="lms1xx" type="LMS1xx_node">
      <param name="host" value="$(optenv RIDGEBACK_FRONT_LASER_HOST 192.168.1.14)" />
      <param name="frame_id" value="$(optenv RIDGEBACK_FRONT_LASER_MOUNT front)_laser" />
      <remap from="scan" to="$(optenv RIDGEBACK_FRONT_LASER_SCAN_TOPIC front/scan)" />
    </node>
  </group>

  <group if="$(optenv RIDGEBACK_REAR_LASER 0)">
    <node pkg="lms1xx" name="lms1xx" type="LMS1xx_node">
      <param name="host" value="$(optenv RIDGEBACK_REAR_HOST 192.168.1.13)" />
      <param name="frame_id" value="$(optenv RIDGEBACK_REAR_LASER_MOUNT rear)_laser" />
      <remap from="scan" to="$(optenv RIDGEBACK_REAR_LASER_SCAN_TOPIC rear/scan)" />
    </node>
  </group>

</launch>
